<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="cordova-plugin-key-storage"
    version="1.0.0">

    <name>Key Storage Plugin for Cordova iOS and Android</name>
    <description>
      This plugin allows your app access to the iOS KeyChain and Android Keystore from Cordova.
      See: https://developer.apple.com/library/mac/documentation/security/conceptual/keychainServConcepts/iPhoneTasks/iPhoneTasks.html

      Builds off the great work of ionic-team/cordova-plugin-ios-keychain (formerly shazron/KeychainPlugin)
      and pradeep1991singh/cordova-plugin-secure-key-store.
    </description>
    <license>Apache 2.0</license>
    <keywords>keychain</keywords>

    <engines>
        <engine name="cordova" version=">=2.2.0" />
    </engines>

    <asset src="www/keychain.js" target="plugins/keychain.js" />

  	<js-module src="www/keychain.js" name="Keychain">
      	<clobbers target="window.Keychain"/>
  	</js-module>

    <!-- ios -->
    <platform name="ios">
        <!-- feature tag in config.xml -->
        <config-file target="config.xml" parent="/widget">
          <feature name="Keychain">
            <param name="ios-package" value="CDVKeychain"/>
          </feature>
        </config-file>

        <header-file src="src/ios/CDVKeychain.h" />
        <header-file src="src/ios/A0SimpleKeychain.h"/>

        <source-file src="src/ios/CDVKeychain.m"/>
        <source-file src="src/ios/A0SimpleKeychain.m"/>

        <framework src="Security.framework" />
    </platform>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Keychain">
                <param name="android-package" value="com.humanpractice.cordova.keystorage.Keychain"/>
            </feature>
        </config-file>
        <source-file src="src/android/Keychain.java" target-dir="src/com/humanpractice/cordova/keystorage/" />
        <source-file src="src/android/SecureStorage.java" target-dir="src/com/humanpractice/cordova/keystorage/" />
        <source-file src="src/android/FileStorage.java" target-dir="src/com/humanpractice/cordova/keystorage/" />
        <source-file src="src/android/Encryption.java" target-dir="src/com/humanpractice/cordova/keystorage/" />
        <source-file src="src/android/Logged.java" target-dir="src/com/humanpractice/cordova/keystorage/" />
        <source-file src="src/android/ReportableException.java" target-dir="src/com/humanpractice/cordova/keystorage/" />
    </platform>
</plugin>
